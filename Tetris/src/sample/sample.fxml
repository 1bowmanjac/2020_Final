<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="Start" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#startTetris"></Button>
    <Button text="Exit" GridPane.rowIndex="4" GridPane.columnIndex="2" onAction="#exit"></Button>
    <Button text="High Scores" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#showHighScores"></Button>
    <TextArea fx:id="textArea" GridPane.rowIndex="3" GridPane.columnIndex="1"
              prefWidth="400" prefHeight="400"></TextArea>
</GridPane>